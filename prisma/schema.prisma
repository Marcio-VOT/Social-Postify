generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id           Int            @id @default(autoincrement())
  name         String
  email        String         @unique
  password     String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime?
  Publications Publications[]

  @@map("users")
}

model Publications {
  id            Int       @id @default(autoincrement())
  userId        Int
  image         String
  title         String    @unique
  text          String
  dateToPublish DateTime
  published     Boolean   @default(false)
  createdAt     DateTime  @default(now())
  socialMedia   String
  updatedAt     DateTime?
  author        Users     @relation(fields: [userId], references: [id])

  @@map("publications")
}
